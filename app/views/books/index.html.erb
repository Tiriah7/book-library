<h1>Books</h1>

<ul>
  <% @books.each do |book| %>
    <li>
      <%= book.title %> by <%= book.author %> 
      
      <% if book.borrowings.where(returned: false).exists? %>
        (Borrowed) 
        <%= button_to "Return", return_book_path(book), method: :post, data: { turbo: false } %>
      <% else %>
        <%= button_to "Borrow", borrow_book_path(book), method: :post, data: { turbo: false } %>
      <% end %>
    </li>
  <% end %>
</ul>
